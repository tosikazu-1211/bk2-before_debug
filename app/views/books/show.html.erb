<div class="container">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<% if @book1.user == current_user %>
						<%= link_to user_path(@book1.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book1.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book1.title, book_path(@book1) %></td>
					<td><%= @book1.body %></td>
					<td><%= link_to "Edit", edit_book_path(@book1), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy", book_path(@book1), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				</tr>
				<% end %>
			</table>

	</div>
</div>
</div>
